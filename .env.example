# Database Configuration
POSTGRES_USER=katachi
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=katachi_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Redis Configuration
REDIS_URL=redis://redis:6379

# Application Configuration
NODE_ENV=development
NUXT_PUBLIC_API_BASE=/api
NUXT_HOST=0.0.0.0
NUXT_PORT=3000

# Session Secret (change in production - min 32 characters)
SESSION_SECRET=your-super-secret-session-key-min-32-chars-change-in-production

# Session Configuration
SESSION_MAX_AGE=604800000

# Sync Configuration
NUXT_PUBLIC_ENABLE_SYNC=true
NUXT_PUBLIC_SYNC_DEBOUNCE_MS=500

# Email Configuration (SMTP)
SMTP_HOST=mail.lasseharm.space
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@lasseharm.space
NUXT_PUBLIC_APP_URL=http://localhost:3000
